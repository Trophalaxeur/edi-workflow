<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_edifact_sale_order_add_files" model="ir.ui.view">
            <field name="model">edifact.sale.order.add.files</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Add Sale Order EDI files to import list">
                    <group name="main">
                        <field name="edi_file" filename="filename"/>
                        <field name="filename" invisible="1"/>
                    </group>
                   <footer>
                        <button class="oe_highlight" special="cancel" string="Cancel"/>
                        <button name="import_edi" string="Import" type="object"/>
                   </footer>
               </form>
            </field>
        </record>
        <record id="action_edifact_sale_order_add_files" model="ir.actions.act_window">
            <field name="name">Add Sale Orders file to Import list</field>
            <field name="res_model">edifact.sale.order.add.files</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_edifact_sale_order_add_files"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
