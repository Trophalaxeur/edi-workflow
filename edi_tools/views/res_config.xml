                                <div class="o_setting_right_pane">
                                    <label for="edi_root_directory"/>
                                    <div class="content-group">
                                        <div class="mt16">
                                            <field name="edi_root_directory" class="o_light_label"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
