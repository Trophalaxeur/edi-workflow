<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="edi_edifact_res_config_settings_view_form" model="ir.ui.view">
            <field name="name">EDI Tools settings</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="85" />
            <field name="inherit_id" ref="edi_tools.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <!-- <xpath expr="//field[@name='edi_root_directory']" position="after">
                    <field name="bots_config_dir" class="o_light_label" />
                </xpath> -->

                <xpath expr="//div[@data-key='EDI']//div[hasclass('o_setting_right_pane')]" position="inside">
                    <label for="bots_config_dir" />
                    <div class="content-group">
                        <div class="mt16">
                            <field name="bots_config_dir" class="o_light_label" />
                        </div>
                    </div>
                </xpath>


            </field>
        </record>
    </data>
</odoo>